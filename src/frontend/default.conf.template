server {
    listen 80;
    root /usr/share/nginx/html;
    index index.html;

    location /api/ {
        proxy_pass ${BACKEND_URL};
        include /etc/nginx/snippets/proxy-headers.conf;
    }

    location /oauth2/ {
        proxy_pass ${BACKEND_URL};
        include /etc/nginx/snippets/proxy-headers.conf;
    }

    location /login/oauth2/ {
        proxy_pass ${BACKEND_URL};
        include /etc/nginx/snippets/proxy-headers.conf;
    }

    location / {
        try_files $uri $uri/ /index.html;
    }
}
